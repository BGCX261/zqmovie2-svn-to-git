<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
   	<!-- 配置文件装载器 -->
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location">
            <value>net/ziqiang/movie/dao/ibatis/movie/conf/db.properties</value>
        </property>
    </bean>
   	<!-- 配置文件装载器 -->

   	<!-- 数据源，带连接池 -->
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName">
            <value>${driver}</value>
        </property>
        <property name="url">
            <value>${url}</value>
        </property>
        <property name="username">
            <value>${username}</value>
        </property>
        <property name="password">
            <value>${password}</value>
        </property>
	</bean>
	<!-- 数据源，带连接池 -->
	
	<!-- sqlMapClient -->
	<bean id="sqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
		<property name="configLocation">
			<value>net/ziqiang/movie/dao/ibatis/movie/conf/sql-map-config.xml</value>
		</property>
		<property name="dataSource">
			<ref bean="dataSource"/>
		</property>
	</bean>
	<!-- sqlMapClient -->
	
	<!-- sqlMapClientTemplate -->
	<bean id="sqlMapClientTemplate" class="org.springframework.orm.ibatis.SqlMapClientTemplate">
		<property name="sqlMapClient">
			<ref bean="sqlMapClient" />
		</property>
	</bean>
	<!-- sqlMapClientTemplate -->
	
	<!-- 通用方法接口的iBatis实现 -->
	<bean id="commonDao" class="com.littleqworks.commons.dao.ibatis.spring.CommonDaoGenericImpl">
		<property name="sqlMapClientTemplate">
			<ref bean="sqlMapClientTemplate" />
		</property>
	</bean>
	<!-- 通用方法接口的iBatis实现 -->

	<bean id="movieService" class="net.ziqiang.movie.service.MovieService">
		<property name="commonDao">
			<ref bean="commonDao" />
		</property>
	</bean>
</beans>