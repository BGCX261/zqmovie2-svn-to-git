<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN" "validator_1_1_3.dtd" >
<form-validation>
	<formset>
		<form name="movieActionForm">
			<field property="movie.name" depends="required">
				<arg key="label.name" position="0"/>
			</field>
			<field property="movie.style" depends="required">
				<arg key="label.style" position="0"/>
			</field>
			<field property="movie.lei" depends="required">
				<arg key="label.lei" position="0"/>
			</field>
			<field property="movie.path" depends="required">
				<arg key="label.path" position="0"/>
			</field>									
			<field property="movie.size" depends="required,integer">
				<arg key="label.size" position="0"/>
			</field>
			<field property="movie.dir" depends="required">
				<arg key="label.dir" position="0"/>
			</field>			
			<field property="movie.actor" depends="required">
				<arg key="label.actor" position="required"/>
			</field>
		</form>
		
		<form name="loginForm">
			<field property="username" depends="required">
				<arg key="label.username" position="0"/>
			</field>
			<field property="password" depends="required">
				<arg key="label.password" position="0"/>
			</field>			
		</form>		
	</formset>
	
	
</form-validation>